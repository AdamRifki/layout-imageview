<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="@drawable/bg_menu"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="#FF9800"
            android:paddingLeft="@dimen/Image_Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Menu"
            android:textSize="@dimen/card_menu"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_weight="0.1"
        android:background="@drawable/bg_login"
        android:layout_marginLeft="@dimen/padding_img"
        android:layout_marginRight="@dimen/padding_img">

        <!--Row 1-->
        <!--Column 1-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_marginTop="@dimen/margin_top_img"
                    android:layout_width="@dimen/size_img_width"
                    android:layout_height="@dimen/size_img_height"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/padding_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/menu"
                    android:background="@drawable/bg_img_menu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_menu"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_menu"/>
            </LinearLayout>
        </FrameLayout>
        <!--Column 2-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_marginTop="@dimen/margin_top_img"
                    android:layout_width="@dimen/size_img_width"
                    android:layout_height="@dimen/size_img_height"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/padding_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/ordering"
                    android:background="@drawable/bg_img_menu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_order"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_menu"/>
            </LinearLayout>
        </FrameLayout>
        <!--Row 2-->
        <!--Column 1-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_marginTop="@dimen/margin_top_img"
                    android:layout_width="@dimen/size_img_width"
                    android:layout_height="@dimen/size_img_height"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/padding_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/fast_delivery"
                    android:background="@drawable/bg_img_menu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_delivery"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_menu"/>
            </LinearLayout>
        </FrameLayout>
        <!--Column 2-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_marginTop="@dimen/margin_top_img"
                    android:layout_width="@dimen/size_img_width"
                    android:layout_height="@dimen/size_img_height"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/padding_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/bill"
                    android:background="@drawable/bg_img_menu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_pay"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_menu"/>
            </LinearLayout>
        </FrameLayout>

    </GridLayout>

</LinearLayout>
